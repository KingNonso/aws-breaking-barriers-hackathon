{
  "name": "trafficking-alert-ui",
  "version": "1.0.0",
  "description": "Real-Time Trafficking Alert System UI",
  "main": "js/config.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "trafficking",
    "alert",
    "ui"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/screens/**/*.js"
    ]
  }
}
